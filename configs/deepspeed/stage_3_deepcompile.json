{
  "train_micro_batch_size_per_gpu": 1,
  "train_batch_size": 4,
  "gradient_accumulation_steps": 1,
  
  "optimizer": {
    "type": "AdamW",          
    "params": {
      "lr": 1e-5,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },

  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-5,
      "warmup_num_steps": 10
    }
  },

  "bf16": {
    "enabled": true
  },

  "compile": {
    "deepcompile": true
  },
  
  "zero_optimization": {
    "stage": 3,
    "contiguous_gradients": true,
    "overlap_comm": true
  },
  
  "gradient_clipping": 1.0,
  
  "flops_profiler": {
    "enabled": false,
    "profile_step": 10,
    "module_depth": -1,
    "top_modules": 3,
    "detailed": true
  },
  
  "wall_clock_breakdown": false
}
